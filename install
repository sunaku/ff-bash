#!/bin/bash
# simple installation script

# default installation directory
default_dir=$HOME/bin

# ask user for installation directory
read -p "(ff-install) Please specify installation directory [$default_dir]: " install_dir
[ -z "$install_dir" ] && install_dir=$default_dir

# create installation directory if doesn't exist
[ ! -e "$install_dir" ] && mkdir -p "$install_dir"

# perform installation
if chmod +x ff fl && cp ff-lib ff fl "$install_dir"
then
	echo "(ff-install) Installation was successful."
else
	echo "(ff-install) Installation was not successful."
fi

