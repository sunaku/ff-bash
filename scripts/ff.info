# displays values of preset variables
print_info()
{
	echo "
    \$o = \"$o\"
    \$n = \"$n\"
    \$p = \"$p\"
    \$d = \"$d\"
"
}

main()
{
	echo "main() {"
		print_info	# display variables
	echo "}"
}

begin()
{
	echo "begin() {"

		# display command-line args
			local i=0 arg

			for arg
			do
				echo -n "
    \$$i = \"$arg\""
				(( i++ ))
			done
			echo

		print_info	# display variables

	echo "}"
}

end()
{
	echo "end() {"
		print_info	# display variables
	echo "}"
}

