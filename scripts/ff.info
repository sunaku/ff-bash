# displays values of preset variables
# @param	1	name of caller function
print_info()
{
	echo "$1 {"
	echo "\$fn = \"$fn\""
	echo "\$f  = \"$f\""
	echo "\$d  = \"$d\""
	echo "}"
}

main()
{
	print_info "main()"
}

begin()
{
	print_info "begin()"
}

end()
{
	print_info "end()"
}

