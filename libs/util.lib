## globals

## functions
	
	# Prints the unsigned decimal ASCII value of a given character to <stdout>.
	# @param	1	a single character
	__lib_util_ord()
	{
		local v=$( printf "%d" "'$1" )
		
		# adjust result for overflow into two's-complement range
		if [ $v -le 0 -a -n "$1" ]
		then
			# w  = (128 - |v|) * 2
			# v' = w + |v|
			#    = 256 - |v|
			
			let "v = 256 - ${v#-}"
		fi
		
		echo $v
	}

