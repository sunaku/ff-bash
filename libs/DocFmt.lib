## globals

	__lib_DocFmt_indent=	# holds a string of tab characters

## functions

	# Prints text to the current block. The text can have
	# escape sequences (such as '\n' for newline), and the
	# some formatting tags:
	#	<b> or <B>	bold
	#	<u> or <U>	underline
	#
	# All tags must be properly enclosed.
	# For example: "<tag>text</tag>"
	#
	# @param	$*	text to print.
	#
	__lib_DocFmt_blockItem()
	{
		local buff=$*
		
		# convert formatting tags to ANSI escape sequences
		buff=${buff//<[bB]>/\\033\[1m}
		buff=${buff//<\/[bB]>/\\033\[22m}
		buff=${buff//<[uU]>/\\033\[4m}
		buff=${buff//<\/[uU]>/\\033\[24m}
		
		echo -e "${__lib_DocFmt_indent}${buff}"
	}

	# begins a new indented block
	__lib_DocFmt_blockStart()
	{
		__lib_DocFmt_indent="$__lib_DocFmt_indent\t"	# increase indent
	}
	
	# terminates an indented block
	__lib_DocFmt_blockEnd()
	{
		__lib_DocFmt_indent=${__lib_DocFmt_indent%\\t}	# decrease indent
		echo
	}

